@{
    ViewData["Title"] = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="styles.css">
    <style>
        /* CSS personalizado para centralizar o conteúdo no topo da página */
        body, html {
            height: 100%;
        }


        .mt-40 {
            margin-top: 40px;
        }

        .mt-22 {
            margin-top: 22px;
        }
    </style>
}

<h1 class="mb-4 text-center">Consulta de CNPJ</h1>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="form-group col-md-4">
            <label for="cnpjInput">Digite o CNPJ:</label>
            <input class="form-control" id="cnpjInput" placeholder="Digite o CNPJ">
        </div>
        <div class="form-group col-md-2 mt-22">
            <button class="btn btn-primary" onclick="consultarCNPJ()">Consultar</button>
        </div>
    </div>
    <div id="divResultado" class="card mt-40 p-3 d-none">
        <div id="resultado"></div>
    </div>
</div>

@section Scripts {

    <script src="~/js/script.js"></script>
}